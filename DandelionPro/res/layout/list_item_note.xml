<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/note_folder_bg"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/note_folder_height"
            android:scaleType="centerCrop"
            android:src="@drawable/share_public_headview_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="100dp"
            android:background="@color/list_folder_text_bg_color" >

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:text="游走在历史的边缘边缘边缘边缘边缘"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:padding="3dp"
                android:text="2013.11.25"
                android:textSize="14sp"
                android:textColor="@color/list_folder_sub_text_color" />

            <TextView
                android:id="@+id/tv_time_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:text="10天"
                android:textSize="12sp"
                android:textColor="@color/list_folder_sub_text_color" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>